generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id              String   @id @default(cuid())
  date            DateTime @default(now())
  customerName    String?
  amount          Int      @default(0)
  currency        String?
  convertedAmount Int?
  salesRep        String?
  region          String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("transactions")
}

model SalesRep {
  id   String @id @default(cuid())
  name String

  @@map("salesreps")
}

model Region {
  id   String @id @default(cuid())
  name String

  @@map("regions")
}
